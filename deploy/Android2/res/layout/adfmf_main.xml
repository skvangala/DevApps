<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/slidingWindowLayout"
    >
	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/tabLayout">
		<FrameLayout android:id="@android:id/tabcontent"
			android:layout_width="match_parent" android:layout_height="0px"
			android:layout_weight="1" />
		<TabWidget android:id="@android:id/tabs"
			android:layout_width="match_parent" android:layout_height="wrap_content" />
	</LinearLayout>
	</RelativeLayout>
</TabHost>
